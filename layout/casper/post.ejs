
<% permalink = config.url + config.root + post.path %>
<%- partial('casper/postheader') %>
<main class="content" role="main">
  <% if (post.title == "Works") { %>

  <div class="works-marker">
    <article class="post">
      <h1 class="post-title"><%- post.title %></h1>
      <section class="post-content">
        <%- post.content %>
      </section>
    </article>
  </div>
  <!-- make a single page app for portfolio -->
  <script type="text/javascript" src="<%- config.root%>js/portfolio.js"></script>
  <% } else { %>

  <article class="post">
    <%- partial('post/meta') %>
    <h1 class="post-title"><%- post.title %></h1>
    <section class="post-content">
      <%- post.content %>
    </section>
  </article>
  <%- partial('post/navigation') %>
  <% } %>
</main>